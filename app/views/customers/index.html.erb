<h1>Listing Customers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Zip Code/CEP</th>
      <th>Street</th>
      <th>State</th>
      <th>City</th>
      <th>Neighborhood</th>
      <th>House Number</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.zip_code %></td>
        <td><%= c.street %></td>
        <td><%= c.state %></td>
        <td><%= c.city %></td>
        <td><%= c.neighborhood %></td>
        <td><%= c.number %></td>


        <td><%= link_to 'Show', c , class: "btn btn-success btn-sm"%></td>
        <td><%= link_to 'Edit', edit_customer_path(c), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


