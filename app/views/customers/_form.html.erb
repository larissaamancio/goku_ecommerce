<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br>
    <%= f.text_field :zip_code, :onBlur => "findByCep()"%>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :neighborhood %><br>
    <%= f.text_field :neighborhood %>
  </div>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary mt' %>
  </div>
<% end %>

<script>

  function findByCep() {
    var cep = document.getElementById( "customer_zip_code" ).value;
    $.getJSON("/customers/" + cep + "/find_by_cep",
      function ( data ) {
        console.log(data);
        $("#customer_street").val(data.tipo_logradouro + ' ' + data.logradouro);
        $("#customer_state").val(data.uf);
        $("#customer_city").val(data.cidade);
        $("#customer_neighborhood").val(data.bairro);
        $("#customer_number").focus();
      }
    );
  }


</script>